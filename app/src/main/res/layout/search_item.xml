<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp">

    <TextView
        android:id="@+id/tv_search_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_with_shadow"
        app:layout_constraintEnd_toStartOf="@id/iv_icon_chevron_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon_chevron_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/background_with_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_search_item_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_chevron_right" />


</androidx.constraintlayout.widget.ConstraintLayout>