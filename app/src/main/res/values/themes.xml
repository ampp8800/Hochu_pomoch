<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HochuPomoch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/turtle_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/leaf</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/leaf</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/turtle_green</item>
    </style>

